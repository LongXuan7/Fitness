<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#EAEAEA"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/iv_sport_category"
        android:layout_width="138dp"
        android:layout_height="138dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sport" />

    <TextView
        android:id="@+id/tv_name_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Protein"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/iv_sport_category"
        app:layout_constraintEnd_toStartOf="@+id/tv_next_category_sport"
        app:layout_constraintStart_toEndOf="@+id/iv_sport_category"
        app:layout_constraintTop_toTopOf="@+id/iv_sport_category" />

    <ImageView
        android:id="@+id/tv_next_category_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/next_blue" />
</androidx.constraintlayout.widget.ConstraintLayout>