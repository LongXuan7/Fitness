<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="18dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/bg_reminder"
        app:srcCompat="@drawable/dumble_icon" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_reminder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Daily push-day never die"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/iv_delete_reminder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_delete_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tv_time_reminder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_time_reminder"
            app:srcCompat="@drawable/delete1" />

        <TextView
            android:id="@+id/tv_time_reminder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Thursday, 20/02/2025"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_reminder"
            app:layout_constraintStart_toStartOf="@+id/tv_title_reminder"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_reminder" />

        <TextView
            android:id="@+id/tv_time_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="05:44 AM"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_time_reminder"
            app:layout_constraintStart_toStartOf="@+id/tv_time_reminder"
            app:layout_constraintTop_toBottomOf="@+id/tv_time_reminder" />

        <View
            android:id="@+id/view13"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/light_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_time_1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>